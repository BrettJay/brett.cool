.Banner{style: "background-image: url('/images/photoessays/#{slug}/banner.jpg')"}
  .Banner_caption
    %h1= title
    %p= subtitle
  - if trip.present?
    .Banner_TripSummary
      %dl
        %dt= trip[:dates][:from].strftime("%b %-d, %Y")
        %dd Arrival
      %dl
        %dt= trip[:dates][:to].strftime("%b %-d, %Y")
        %dd Departure
      .TripIcon{class: "TripIcon_transport--#{trip[:transport]}"}
      .TripIcon{class: "TripIcon_weather--#{trip[:weather]}"}
  = partial "photoessays/components/scroll"
