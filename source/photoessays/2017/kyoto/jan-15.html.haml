---
  slug: '2017/kyoto/jan-15'
  body_classes: page-photoessays
---

- essay = data.photoessays['2017'].kyoto.find { | slug, date | slug == '2017-01-15' }

- @dynamic_title = essay[1].title
- @dynamic_subtitle = essay[1].subtitle
- @dynamic_description = essay[1].subtitle

- @og_image_override = 'photoessays/2017/kyoto/jan-15'

= partial("photoessays/2017/kyoto/subheader", locals: {collection: essay[1].collection})
= partial("photoessays/components/banner", locals: {slug: current_page.data.slug, title: essay[1].title, subtitle: essay[1].subtitle, trip: ''})

.Page
  .Content#story
    - essay[1].content.each do | story_block |
      - story_block.each do | template, block |
        = partial("photoessays/blocks/#{template}", locals: {slug: current_page.data.slug, block: block })

  .Content
    .PhotoRow
      .PhotoEssayFooterNavigation
        = link_to "/photoessays/2017/tokyo/#{essay[1].collection.prev}", class: 'PhotoEssay_nav PhotoEssay_nav--previous', style: "background-image: url('/images/photoessays/2017/tokyo/#{essay[1].collection.prev}/banner.jpg')" do
          .PhotoEssay_nav_label Previous
          - data.tokyo.dates.each do | date |
            - if date.slug === essay[1].collection.prev
              .PhotoEssay_nav_title= date.title
              .PhotoEssay_nav_date= date.date.strftime("%B %-d")
        = link_to "/photoessays/2017/kyoto/#{essay[1].collection.next}", class: 'PhotoEssay_nav PhotoEssay_nav--next', style: "background-image: url('/images/photoessays/2017/kyoto/#{essay[1].collection.next}/banner.jpg')" do
          .PhotoEssay_nav_label Next
          - data.kyoto.dates.each do | date |
            - if date.slug === essay[1].collection.next
              .PhotoEssay_nav_title= date.title
              .PhotoEssay_nav_date= date.date.strftime("%B %-d")

