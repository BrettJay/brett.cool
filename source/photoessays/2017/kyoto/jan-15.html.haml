---

- essay = data.photo_essays['2017'].kyoto.find { | slug, date | slug == '2017-01-15' }

- @og_image_override = 'photoessays/2017/kyoto/jan-15'

= partial("photoessays/2017/kyoto/subheader", locals: {collection: current_page.data.collection})

= partial("photoessays/components/banner", locals: {slug: current_page.data.slug, title: current_page.data.title, subtitle: current_page.data.subtitle, trip: current_page.data.trip})

.Page
  .Content#story
    - essay[1].content.each do | story_block |
      - story_block.each do | template, block |
        = partial("photoessays/blocks/#{template}", locals: {slug: current_page.data.slug, block: block })

  .Content
    .PhotoRow
      .PhotoEssayFooterNavigation
        = link_to "/photoessays/2017/tokyo/#{current_page.data.collection.prev}", class: 'PhotoEssay_nav PhotoEssay_nav--previous', style: "background-image: url('/images/photoessays/2017/tokyo/#{current_page.data.collection.prev}/banner.jpg')" do
          .PhotoEssay_nav_label Previous
          - data.tokyo.dates.each do | date |
            - if date.slug === current_page.data.collection.prev
              .PhotoEssay_nav_title= date.title
              .PhotoEssay_nav_date= date.date.strftime("%B %-d")
        = link_to "/photoessays/2017/kyoto/#{current_page.data.collection.next}", class: 'PhotoEssay_nav PhotoEssay_nav--next', style: "background-image: url('/images/photoessays/2017/kyoto/#{current_page.data.collection.next}/banner.jpg')" do
          .PhotoEssay_nav_label Next
          - data.kyoto.dates.each do | date |
            - if date.slug === current_page.data.collection.next
              .PhotoEssay_nav_title= date.title
              .PhotoEssay_nav_date= date.date.strftime("%B %-d")

