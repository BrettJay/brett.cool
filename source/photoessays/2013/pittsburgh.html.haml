    = partial("photoessays/components/place_of_interest", locals: {slug: current_page.data.slug, image: '08/IMG_3577', title: 'South Side Barber Shop', address: '1509 E Carson St, Pittsburgh, PA 15203, USA', place: 'Barber Shop', rating: 5, link:'' })

